rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isActiveAdmin() {
      return isSignedIn()
        && exists(/databases/$(database)/documents/admins/$(request.auth.uid))
        && get(/databases/$(database)/documents/admins/$(request.auth.uid)).data.isActive == true;
    }

    // Admin doc: admin can read only their own doc
    match /admins/{adminId} {
      allow read: if isSignedIn() && request.auth.uid == adminId;
      allow write: if false;
    }

    // Admin panel access to bookings (full)
    match /bookings/{bookingId} {
      allow read, write: if isActiveAdmin();
    }

    // Example: clients/users collection for admin only
    match /clients/{clientId} {
      allow read, write: if isActiveAdmin();
    }

    // (IMPORTANT) Public app rules (customize to your app)
    // Example: user can read/write their own bookings only
    match /bookings/{bookingId} {
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      allow read: if isSignedIn() && resource.data.userId == request.auth.uid;
      allow update, delete: if false; // or allow cancel with conditions
    }
  }
}
